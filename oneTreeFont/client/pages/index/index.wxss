.swiper_box{
  margin: 20rpx 0;
  width: 100%;
  height: 240rpx;
}
.swiper_box swiper-item{
  height: 240rpx;
}
.swiper_box image{
  width: 100%;
  display: block;
  height: 240rpx;
}


.title-txt{
  text-align: center;
  margin: 30rpx 0;
}
.dis-box{
  width: 100%;
  margin: 20rpx 0;
  background: #f2f2f2;
  padding: 30rpx 0;
}
.line-style{
  display: flex;
  width: 100%;
}
.line-style>view{
  width: 100%;
}
/* "#09bb07", "#10aeff", "#f76260", "#ffbe00", "#00FFFF", "#7FFFD4", "#8A2BE2"  */
.block-style{
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.spring{
  background: #09bb07;
}
.summer{
  background: #f76260;
}
.autumn{
  background: #ffbe00;
}
.winter{
  background: #00FFFF;
}